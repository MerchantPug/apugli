{
    "type": "apoli:action_over_time",
    "interval": 1,
    "hud_render": {
        "should_render": false
    },
    "entity_action": {
        "type": "apoli:if_else_list",
        "actions": [
            {
                "condition": {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.forward"
                    }
                },
                "action": {
                    "type": "apoli:execute_command",
                    "command": "say forward"
                }
            },
            {
                "condition": {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.left"
                    }
                },
                "action": {
                    "type": "apoli:execute_command",
                    "command": "say left"
                }
            },
            {
                "condition": {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.back"
                    }
                },
                "action": {
                    "type": "apoli:execute_command",
                    "command": "say back"
                }
            },
            {
                "condition": {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.right"
                    }
                },
                "action": {
                    "type": "apoli:execute_command",
                    "command": "say right"
                }
            }
        ]
    }
}