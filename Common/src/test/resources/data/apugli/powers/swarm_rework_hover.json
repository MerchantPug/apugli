{
  "type": "apoli:multiple",
  "hover": {
    "type": "apugli:hover",
    "step_assist": 0.6,
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apugli:velocity",
          "y": 0.0,
          "comparison": "<="
        },
        {
          "type": "apugli:key_pressed",
          "key": {
            "key": "key.jump",
            "continuous": true
          }
        },
        {
          "type": "apoli:climbing",
          "inverted": true
        },
        {
          "type": "apoli:fluid_height",
          "fluid": "minecraft:water",
          "comparison": ">",
          "compare_to": "0",
          "inverted": true
        },
        {
          "type": "apoli:fluid_height",
          "fluid": "minecraft:lava",
          "comparison": ">",
          "compare_to": "0",
          "inverted": true
        },
        {
          "type": "apoli:fall_flying",
          "inverted": true
        },
        {
          "type": "apoli:riding",
          "inverted": true
        },
        {
          "type": "apoli:power_active",
          "power": "*:*_toggle_resource"
        },
        {
          "type": "apugli:cached_block_in_radius",
          "block_condition": {
            "type": "apoli:attachable"
          },
          "radius": 8
        }
      ]
    }
  },
  "deplete_hunger_while_using": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:if_else",
          "condition": {
            "type": "apoli:or",
            "conditions": [
              {
                "type": "apoli:food_level",
                "comparison": ">",
                "compare_to": 6
              },
              {
                "type": "apoli:gamemode",
                "gamemode": "creative"
              }
            ],
            "inverted": true
          },
          "if_action": {
            "type": "apoli:if_else",
            "condition": {
              "type": "apugli:moving"
            },
            "if_action": {
              "type": "apoli:exhaust",
              "amount": 0.06
            },
            "else_action": {
              "type": "apoli:exhaust",
              "amount": 0.03
            }
          }
        },
        {
          "type": "apoli:if_else",
          "condition": {
            "type": "apoli:or",
            "conditions": [
              {
                "type": "apoli:food_level",
                "comparison": ">",
                "compare_to": 6
              },
              {
                "type": "apoli:gamemode",
                "gamemode": "creative"
              }
            ],
            "inverted": true
          },
          "if_action": {
            "type": "apoli:exhaust",
            "amount": 0.06
          }
        }
      ]
    },
    "interval": 1,
    "condition": {
      "type": "apoli:power_active",
      "power": "*:*_hover"
    }
  },
  "toggle_resource": {
    "type": "apoli:toggle",
    "active_by_default": true,
    "key": {
      "key": "key.apoli.primary_active"
    }
  },
  "badges": [
    {
      "type": "toomanyorigins:defined_keybind",
      "sprite": "origins:textures/gui/badge/active.png",
      "text": "origins.gui.badge.active",
      "key": {
        "key": "key.jump"
      }
    },
    {
      "type": "toomanyorigins:defined_keybind",
      "sprite": "origins:textures/gui/badge/toggle.png",
      "text": "origins.gui.badge.toggle",
      "key": {
        "key": "key.origins.primary.active"
      }
    }
  ]
}